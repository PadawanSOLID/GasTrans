<Window
    x:Class="GasTrans.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GasTrans"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:MainVM}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="BaseLine" TargetType="Line">
                <Setter Property="StrokeThickness" Value="15" />
                <Style.Triggers>
                    <Trigger Property="X2" Value="0">
                        <Setter Property="Stroke">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="1,0">
                                    <GradientStop Offset="0" Color="Gray" />
                                    <GradientStop Offset=".5" Color="WhiteSmoke" />
                                    <GradientStop Offset="1" Color="Gray" />
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                    <Trigger Property="Y2" Value="0">
                        <Setter Property="Stroke">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="0,1">
                                    <GradientStop Offset="0" Color="Gray" />
                                    <GradientStop Offset=".5" Color="WhiteSmoke" />
                                    <GradientStop Offset="1" Color="Gray" />
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="MovingLine" TargetType="Line">
                <Setter Property="StrokeThickness" Value="10" />
                <Setter Property="Stroke" Value="Red" />
                <Setter Property="StrokeDashArray" Value="2,2" />
                <Setter Property="StrokeDashOffset" Value="6" />
                <Setter Property="Opacity" Value="{Binding Opacity}" />
                <Style.Triggers>
                    <Trigger Property="Opacity" Value="1">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        RepeatBehavior="Forever"
                                        Storyboard.TargetProperty="StrokeDashOffset"
                                        To="12"
                                        Duration="0:0:2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetProperty="StrokeDashOffset"
                                        To="0"
                                        Duration="0:0:.01" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="Links" TargetType="Path">
                <Setter Property="Stroke" Value="Black" />
                <Setter Property="Fill" Value="WhiteSmoke" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="RenderTransformOrigin" Value=".5,.5" />
            </Style>
            <Style
                x:Key="TwoLinks"
                BasedOn="{StaticResource Links}"
                TargetType="Path">
                <Setter Property="Height" Value="42" />
                <Setter Property="Width" Value="42" />
                <Setter Property="Data">
                    <Setter.Value>
                        <Geometry>
                            M2,20 L2,30 L0,30 L0,40 L15,40 L15,30 L13,30 L13,20 A10,10 90 0,1 20,13 L30,13  L30,15 L40,15 L40,0 L30,0 L30,2     L20,2 A20,20 90 0,0 2,20
                        </Geometry>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style
                x:Key="ThreeLinks"
                BasedOn="{StaticResource Links}"
                TargetType="Path">
                <Setter Property="Height" Value="39" />
                <Setter Property="Width" Value="62" />
                <Setter Property="Data">
                    <Setter.Value>
                        <Geometry>
                            M10,2 L10,0 L0,0 L0,15 L10,15 L10,13 L25,13 L25 28 L23,28 L23, 38 L38,38 L38,28 L36,28 L36,13 L51,13 L51,15 L61,15 L61,0 L51,0 L51,2 Z
                        </Geometry>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Canvas>
            <Canvas.Resources>
                <Style BasedOn="{StaticResource BaseLine}" TargetType="Line" />
            </Canvas.Resources>
            <Path
                Canvas.Left="49"
                Canvas.Top="98"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Style="{StaticResource TwoLinks}" />
            <Path
                Canvas.Left="421.5"
                Canvas.Top="38"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Style="{StaticResource TwoLinks}" />
            <Path
                Canvas.Left="49"
                Canvas.Top="236"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Style="{StaticResource TwoLinks}">
                <Path.RenderTransform>
                    <ScaleTransform ScaleY="-1" />
                </Path.RenderTransform>
            </Path>
            <Path
                Canvas.Left="585"
                Canvas.Top="194"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Style="{StaticResource TwoLinks}">
                <Path.RenderTransform>
                    <ScaleTransform ScaleY="-1" />
                </Path.RenderTransform>
            </Path>
            <Path
                Canvas.Left="134"
                Canvas.Top="263"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Style="{StaticResource TwoLinks}">
                <Path.RenderTransform>
                    <ScaleTransform ScaleX="-1" />
                </Path.RenderTransform>
            </Path>
            <Path
                Canvas.Left="562"
                Canvas.Top="38"
                Style="{StaticResource ThreeLinks}" />
            <Line
                Canvas.Left="56"
                Canvas.Top="138"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Y2="100" />
            <Line
                Canvas.Left="89"
                Canvas.Top="106"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                X2="200" />
            <Line
                Canvas.Left="429"
                Canvas.Top="78"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Y2="200" />
            <Line
                Canvas.Left="592.5"
                Canvas.Top="76"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Y2="120" />
            <Line
                Canvas.Left="462"
                Canvas.Top="45.5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                X2="100" />
            <Line
                Canvas.Left="625"
                Canvas.Top="228.5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                X2="40" />
            <Line
                Canvas.Left="623"
                Canvas.Top="46"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                X2="40" />
        </Canvas>
        <Canvas>
            <Canvas.Resources>
                <Style BasedOn="{StaticResource MovingLine}" TargetType="Line" />
            </Canvas.Resources>
            <Line
                Canvas.Left="56"
                Canvas.Top="138"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Y2="100" />
            <Line
                Canvas.Left="89"
                Canvas.Top="106"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                X2="200" />
            <Line
                Canvas.Left="429"
                Canvas.Top="78"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Y2="200" />
            <Line
                Canvas.Left="592.5"
                Canvas.Top="76"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Y2="120" />
            <Line
                Canvas.Left="462"
                Canvas.Top="45.5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                X2="100" />
            <Line
                Canvas.Left="625"
                Canvas.Top="228.5"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                X2="40" />
            <Line
                Canvas.Left="623"
                Canvas.Top="46"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                X2="40" />
        </Canvas>
        <ToggleButton
            x:Name="sb"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Start"
            IsChecked="{Binding IsStarted}" />
    </Grid>
</Window>
